<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_fragment"
    tools:context="com.example.android.teacher.Sensors.RealtimeFragments.HomeFragment">

    <RelativeLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp">

        <LinearLayout
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/homeTitle"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Real-time Streaming"/>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:background="@color/primary_dark_material_light"-->
            <!--android:layout_marginBottom="-10dp"/>-->

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="To start collecting sensor data from Empatica E4 please start session here."/>

                <Button
                    android:id="@+id/startSessionButton"
                    android:layout_width="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circled_play"
                    android:backgroundTint="@color/accent_material_light"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:background="@color/primary_dark_material_light"-->
            <!--android:layout_marginBottom="-10dp"/>-->

        </LinearLayout>




    </RelativeLayout>

</FrameLayout>
