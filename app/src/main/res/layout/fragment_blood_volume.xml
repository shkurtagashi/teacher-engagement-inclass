<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blood_volume_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sensors.Fragments.BloodVolumeFragment"
    android:paddingTop="60dp"
    android:paddingBottom="40dp">

    <TextView
        android:id="@+id/bvp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Volume Pressure"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginBottom="25dp"/>


    <com.github.mikephil.charting.charts.LineChart
        android:layout_below="@id/bvp_title"
        android:id="@+id/bvp_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/save_bvp_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="120dp"
        android:text="Save"
        android:layout_below="@id/bvp_chart"/>


</RelativeLayout>
